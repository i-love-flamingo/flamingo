{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(chore)"
  ],
  "regexManagers": [
    {
      "description": "Update go run/go install dependencies",
      "fileMatch": [".*\\.go$", "Makefile"],
      "matchStrings": [
        "\\s*go (run|install) (?<depName>([^@]+)?).*@(?<currentValue>[^\\s]+)"
      ],
      "datasourceTemplate": "go"
    }
  ]

}
